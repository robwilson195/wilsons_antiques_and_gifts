<h2>Update Wholesaler</h2>
<p>Please complete the fields listed below</p>
<form action="/wholesalers/<%= @wholesaler.id %>" method="post">
  <div class="form_wrapper">
    <div class="form_entry">
      <label for="name">Name:</label><br>
      <input type="text" name="name" value="<%= @wholesaler.name %>"/>
    </div>
    <div class="form_entry">
      <label for="Description">Description:</label><br>
      <textarea rows="4" cols="40" type="text" name="description" ><%= @wholesaler.description %></textarea>
    </div>
    <div class="form_entry">
      <label for="contact_number">Contact Number:</label><br>
      <input type="text" name="contact_number" value="<%= @wholesaler.contact_number %>"/>
    </div>
    <div class="form_entry">
      <label for="logo_url">Logo URL:</label><br>
      <input type="text" name="logo_url" value="<%= @wholesaler.logo_url %>"/>
    </div>
    <div class="form_entry">
      <input type="submit" value="Update"/>
    </div>
  </div>
</form>
<form action="/wholesalers/<%= @wholesaler.id %>/delete" method="post">
  <div class="form_entry">
    <input class="delete_button" type="submit" value="DELETE"/>
  </div>
</form>
